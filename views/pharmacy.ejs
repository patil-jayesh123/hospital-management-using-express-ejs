<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pharmacy</title>

</head>
<body>
  <!-- Sidebar -->
  <%- include('sidebar.ejs') %>

  <!-- Main Content -->
  <div class="main-content" style="margin-left:250px; padding:20px;">
    <h2 class="mb-4 text-primary">Pharmacy Inventory</h2>

    <!-- Search Bar -->
    <div class="mb-3" style="max-width:400px;">
      <input type="text" class="form-control" placeholder="Search medicine by name or ID...">
    </div>

    <!-- Add Medicine Form -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-primary text-white">
        Add New Medicine
      </div>
      <div class="card-body">
        <form>
          <div class="row g-3">
            <div class="col-md-3">
              <label for="medName" class="form-label">Medicine Name</label>
              <input type="text" class="form-control" id="medName" placeholder="Enter medicine name" required>
            </div>
            <div class="col-md-2">
              <label for="medType" class="form-label">Type</label>
              <input type="text" class="form-control" id="medType" placeholder="Tablet/Syrup" required>
            </div>
            <div class="col-md-2">
              <label for="quantity" class="form-label">Quantity</label>
              <input type="number" class="form-control" id="quantity" placeholder="Qty" required>
            </div>
            <div class="col-md-2">
              <label for="price" class="form-label">Price ($)</label>
              <input type="number" class="form-control" id="price" placeholder="Price" required>
            </div>
            <div class="col-md-3 d-flex align-items-end">
              <button type="submit" class="btn btn-primary w-100">Add Medicine</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Medicine Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead>
          <tr class="table-primary">
            <th>#ID</th>
            <th>Medicine Name</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Price ($)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>M001</td>
            <td>Paracetamol</td>
            <td>Tablet</td>
            <td>150</td>
            <td>0.50</td>
            <td>
              <button class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i></button>
              <button class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></button>
            </td>
          </tr>
          <tr>
            <td>M002</td>
            <td>Amoxicillin</td>
            <td>Capsule</td>
            <td>80</td>
            <td>1.00</td>
            <td>
              <button class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i></button>
              <button class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></button>
            </td>
          </tr>
          <tr>
            <td>M003</td>
            <td>Cough Syrup</td>
            <td>Syrup</td>
            <td>40</td>
            <td>3.50</td>
            <td>
              <button class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i></button>
              <button class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Footer -->
    <footer class="mt-4 text-center text-muted">
      <p>Â© 2025 Hospital Management System. All Rights Reserved.</p>
    </footer>
  </div>

 </body>
</html>
