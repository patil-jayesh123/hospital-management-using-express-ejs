<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Patient List</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- Sidebar Include -->
  <%- include('sidebar.ejs') %>

  <style>
    body {
      font-family: "Poppins", sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }

    /* Sidebar adjustment */
    .sidebar {
      z-index: 1000;
      transition: all 0.3s ease;
    }

    .main-content {
      margin-left: 250px;
      padding: 20px;
      transition: all 0.3s ease;
    }

    /* Toggle Button */
    .toggle-btn {
      display: none;
      position: fixed;
      top: 15px;
      left: 15px;
      background: none;
      border: none;
      color: #0d6efd;
      font-size: 26px;
      z-index: 1100;
    }

    /* Responsive */
    @media (max-width: 992px) {
      .sidebar {
        left: -250px;
      }
      .sidebar.active {
        left: 0;
      }
      .main-content {
        margin-left: 0;
      }
      .toggle-btn {
        display: block;
      }
    }

    /* Card styling */
    .card {
      border-radius: 12px;
      overflow: hidden;
    }

    .card-header {
      font-weight: 600;
      letter-spacing: 0.5px;
    }

    footer {
      font-size: 14px;
      color: #6c757d;
    }
  </style>
</head>

<body>
  <!-- Toggle Button -->
  <button class="toggle-btn" id="toggleBtn"><i class="bi bi-list"></i></button>

  <!-- Main Content -->
  <div class="main-content">
    <div class="container-fluid">
      <!-- Add Patient Form -->
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="mb-4 text-primary">Add Patient</h2>
          <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
              Schedule New Patient
            </div>
            <div class="card-body">
              <form action="/saveformp" method="post">
                <div class="row g-3">
                  <div class="col-md-4 col-sm-6">
                    <label for="patient" class="form-label">Patient Name</label>
                    <input type="text" class="form-control" id="patient" name="patient" placeholder="Enter patient name" required>
                  </div>

                  <div class="col-md-2 col-sm-6">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" class="form-control" id="age" name="age" required>
                  </div>

                  <div class="col-md-4 col-sm-6">
                    <label for="gender" class="form-label">Gender</label>
                    <select class="form-select" id="gender" name="gender" required>
                      <option selected disabled>Select gender</option>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                  </div>

                  <div class="col-md-4 col-sm-6">
                    <label for="contact" class="form-label">Contact</label>
                    <input type="number" class="form-control" id="contact" name="contact" placeholder="7874345723" required>
                  </div>

                  <div class="col-md-4 col-sm-6">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                  </div>

                  <div class="col-md-4 col-sm-12 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Add Patient</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Patient List Section -->
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4 text-primary">Patient List</h2>

          <!-- Search Bar -->
          <div class="mb-3" style="max-width: 400px;">
            <input type="text" class="form-control" placeholder="Search patient by name or ID..." />
          </div>

          <!-- Patient Table -->
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead>
                <tr class="table-primary text-center">
                  <th>#ID</th>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Gender</th>
                  <th>Contact</th>
                  <th>Address</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% data.map((val, index) => { %>
                  <tr>
                    <td><%- index + 1 %></td>
                    <td><%- val.patient %></td>
                    <td><%- val.age %></td>
                    <td><%- val.gender %></td>
                    <td><%- val.contact %></td>
                    <td><%- val.address %></td>
                    <td class="text-center">
                      <a href="/editpatient/<%- val._id %>" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil-fill"></i>
                      </a>
                      <a href="/delete/<%- val._id %>" onclick="return confirm('Are you sure?')" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Footer -->
          <footer class="mt-4 text-center text-muted">
            <p>Â© 2025 Hospital Management System. All Rights Reserved.</p>
          </footer>
        </div>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggleBtn = document.getElementById("toggleBtn");
    const sidebar = document.querySelector(".sidebar");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("active");
    });
  </script>
</body>
</html>
